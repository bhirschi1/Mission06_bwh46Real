@{
    ViewData["Title"] = "Movies";
}
@model MovieEntry
<h1>@ViewData["Title"]</h1>
<!--This page has an HTML form to input data for a new movie to the collection-->

<h4>Add data for another movie to add to Mr. Hilton's collection:</h4>

<!--This form includes various attributes of a movie to be entered into the db
    some of them are required (category, title, year, director and rating) and the rest are optional-->
<!--Each will be saved to a sqlite database-->

<form method="post">
    <label asp-for="category">Category</label>
    <input asp-for="category" required /><br />
    <label asp-for="title">Title</label>
    <input asp-for="title" required /><br />
    <label asp-for="year">Year</label>
    <input type="number" asp-for="year" required /><br />
    <label asp-for="director">Director</label>
    <input asp-for="director" required /><br />
    <label for="rating">Rating</label>
    <select name="rating" id="rating" required>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br />
    <!--This is a dropdown to indicate if the movie was edited with clearplay-->
    <label for="edited">Edited</label>
    <select name="edited" id="edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br />
    <label asp-for="lent">Lent To</label>
    <input asp-for="lent" /><br />
    <label asp-for="notes">Notes</label>
    <input asp-for="notes" maxlength="25"/><br />
    <!--Each note can be a maximum of 25 characters-->
    
    <input type="submit" value="Submit" />
</form>
